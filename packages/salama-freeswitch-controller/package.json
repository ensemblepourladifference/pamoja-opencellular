{
  "name": "@pamoja-opencellular/salama-freeswitch-controller",
  "version": "1.0.0",
  "description": "Freeswitch Event Socket controller module for Salama Emergency Service",
  "license": "UNLICENSED",
  "scripts": {
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec ts-node -- src/app.ts",
    "start:prod": "ts-node src/app.js",
    "test": "jest --coverage && yarn test:compilation",
    "test:watch": "jest --watch --coverage",
    "test:compilation": "tsc --noEmit"
  },
  "devDependencies": {
    "app-module-path": "^2.2.0",
    "jest": "23.6.0",
    "jest-fetch-mock": "^2.1.2",
    "nodemon": "^1.18.5",
    "nyc": "^13.1.0",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.8.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^3.0.1",
    "typestyle": "^1.3.7"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/node-fetch": "^2.3.4",
    "@types/redis": "^2.8.12",
    "@types/winston": "^2.4.4",
    "app-module-path": "^2.2.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "modesl": "^1.2.0",
    "node-fetch": "^2.6.0",
    "redis": "^2.8.0",
    "tap": "^14.0.0",
    "winston": "^3.1.0"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
